  end;

  currentLeft := (lists[LIST_PLAYER_SCRIPTS].left + lists[LIST_PLAYER_SCRIPTS].width + 10);

  labels[LABEL_REQUIRED] := TLabel.create(forms[FORM_MAIN]);
  with labels[LABEL_REQUIRED] do
  begin
    parent := lists[LIST_PLAYERS].parent;
    caption := '* = Required field';
