    left := (lists[LIST_PLAYERS].left + lists[LIST_PLAYERS].width + PLAYER_COMPONENT_LEFT + PLAYER_SPACING + 100);
    hint := 'A list of all the selected player''s scripts. Double click to open advanced settings.';
  end;

  currentLeft := (lists[LIST_PLAYER_SCRIPTS].left + lists[LIST_PLAYER_SCRIPTS].width + PLAYER_COMPONENT_LEFT);

  buttons[BUTTON_SCRIPT_ADD] := TButton.create(forms[FORM_MAIN]);
